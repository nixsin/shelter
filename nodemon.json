{
    "restartable": "rs",
    "ignore": [
        "/public/*",
        "/.build/*",
        "*.md",
        "*.css"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json jsx"
}
