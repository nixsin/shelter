{
    "restartable": "rs",
    "ignore": [
        "/.build/*",
        "/public/components/*",
        "/public/css/*",
        "/public/js/*",
        "/public/*.ico",
        "npm-shrinkwrap.json",
        "*.md"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json jsx"
}
